<lsf>
    <initials>
        <reference length="2" />
        <!-- axis length; "0" means no axis displayed -->
        <root id="palace-got" />
        <!-- identifier of root node of the scene graph; this node -->
        <!-- must be defined in one of the following NODE declarations -->
    </initials>

    <views default="defaultCamera">
        <!-- at least one of the following type of cameras must be declared -->
        <perspective id="defaultCamera" near="0.1" far="500" angle="45">
            <from x="30" y="15" z="30" />
            <to x="0" y="-2" z="0" />
        </perspective>

        <perspective id="frontCamera" near="0.1" far="500" angle="0">
            <from x="80" y="50" z="20" />
            <to x="0" y="-2" z="20" />
        </perspective>

        <ortho id="demoOrtho" near="0.2" far="100" left="-0.2" right="0.2" top="0.2" bottom="-0.2">
            <from x="5" y="0" z="10" />
            <to x="5" y="0" z="0" />
            <up x="0" y="1" z="0" /><!-- optional, default 0,1,0 -->
        </ortho>
    </views>

    <illumination>
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />           <!-- global ambient -->
        <background r="0.1" g="0.1" b="0.1" a="1.0" />        <!-- background color -->
    </illumination>

    <lights>
        <!-- NOTE: this block "light" must be repeated as necessary with different "id". At least one light should be present, and a maximum of eight lights is accepted. -->
        <light id="ambientLight">            <!-- ambient light -->
            <enable value="1" />
            <position x="10" y="12" z="9.5" w="1.0" />              <!-- light position; w=1: point light; w=0: directional light -->
            <ambient r="0" g="0" b="0" a="1.0" />                   <!-- ambient component -->
            <diffuse r="0.5" g="0.5" b="0.5" a="1.0" />             <!-- diffuse component -->
            <specular r="0.1" g="0.1" b="0.1" a="1.0" />            <!-- specular component -->
        </light>

        <light id="windowLight">            <!-- window light -->
            <enable value="0" />
            <position x="0" y="15" z="-20" w="0.0" />                <!-- light position; w=1: point light; w=0: directional light -->
            <ambient r="0.0" g="0.0" b="0.0" a="1.0" />            <!-- ambient component -->
            <diffuse r="0.1" g="0.7" b="1.0" a="1.0" />              <!-- diffuse component -->
            <specular r="0.0" g="0.0" b="0.0" a="1.0" />            <!-- specular component -->
        </light>

        <light id="rightLight">            <!-- right torch light -->
            <enable value="0" />
            <position x="25" y="15" z="38" w="1.0" />               <!-- light position; w=1: point light; w=0: directional light -->
            <ambient r="0" g="0" b="0" a="1.0" />                   <!-- ambient component -->
            <diffuse r="0.1" g="0.0" b="0.0" a="1.0" />           <!-- diffuse component -->
            <specular r="0.0" g="0.0" b="0.0" a="1.0" />            <!-- specular component -->
        </light>

        <light id="leftLight">            <!-- left torch light -->
            <enable value="0" />
            <position x="25" y="15" z="2" w="1.0" />                <!-- light position; w=1: point light; w=0: directional light -->
            <ambient r="0" g="0" b="0" a="1.0" />                   <!-- ambient component -->
            <diffuse r="0.1" g="0.0" b="0.0" a="1.0" />           <!-- diffuse component -->
            <specular r="0.0" g="0.0" b="0.0" a="1.0" />            <!-- specular component -->
        </light>
    </lights>

    <textures>
        <!-- NOTE: this block "TEXTURE" must be repeated as necessary with different "id" -->
        <texture id="defaultTexture" path="./scenes/images/rocks.jpg" />
        <texture id="wallTexture" path="./scenes/images/stones.jpg" />
        <texture id="glassTexture" path="./scenes/images/glass.jpg" />
        <texture id="throneTexture" path="./scenes/images/swords.jpg" />
    </textures>

    <materials>
        <!-- NOTE: the "MATERIAL" block may be repeated as required. Each defined material
         requires a distinct "id". At least one material should be present. -->
         <material id="defaultMaterial">
            <shininess value="1.0" />
            <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
            <diffuse r="0.0" g="0.0" b="0.0" a="1.0" />
            <specular r="0.0" g="0.0" b="0.0" a="1.0" />
            <emissive r="0.0" g="0.0" b="0.0" a="1.0" />
        </material>

        <material id="floorMaterial">
            <shininess value="1.0" />
            <ambient r="0.0" g="0.0" b="0.0" a="1.0" />
            <diffuse r="0.86" g="0.85" b="0.7" a="1.0" />
            <specular r="0.0" g="0.0" b="0.0" a="1.0" />
            <emissive r="0.0" g="0.0" b="0.0" a="1.0" />
        </material>

        <material id="blackMaterial">
            <shininess value="1.0" />
            <ambient r="0.0" g="0.0" b="0.0" a="1.0" />
            <diffuse r="0.0" g="0.0" b="0.0" a="1.0" />
            <specular r="0.0" g="0.0" b="0.0" a="1.0" />
            <emissive r="0.0" g="0.0" b="0.0" a="1.0" />
        </material>

        <material id="orangeMaterial">
            <shininess value="1.0" />
            <ambient r="0.0" g="0.0" b="0.0" a="1.0" />
            <diffuse r="1.0" g="0.5" b="0.0" a="1.0" />
            <specular r="0.0" g="0.0" b="0.0" a="1.0" />
            <emissive r="0.0" g="0.0" b="0.0" a="1.0" />
        </material>

        <material id="lightOrangeMaterial">
            <shininess value="1.0" />
            <ambient r="0.0" g="0.0" b="0.0" a="1.0" />
            <diffuse r="1.0" g="0.7" b="0.4" a="1.0" />
            <specular r="0.0" g="0.0" b="0.0" a="1.0" />
            <emissive r="0.0" g="0.0" b="0.0" a="1.0" />
        </material>
    </materials>

    <nodes>
        <!-- The Root Node, representing the main scene - the palace -->
        <node id="palace-got">            <!-- defines one intermediate node; may be repeated as necessary -->
            <!-- next two lines are mandatory -->
            <material id="defaultMaterial" /><!-- this superimposes the material received from parent node id="null" maintains material from parent node -->

            <texture id="defaultTexture"><!-- declared texture superimposes the texture received from parent node id="null" maintains texture from parent node id="clear" clears texture declaration received from parent node -->
                <amplification afs="1.0" aft="1.0" /><!-- for primitives = dx/afs, dy/aft -->
            </texture>

            <!-- geom. transf. are optional and may be repeated, in any order, as necessary: -->
            <transformations>
            </transformations>

            <!-- declaring descendants, at least one node or one leaf must be present
             descendants may be mixed, nodes and leafs -->
            <descendants>
                <noderef id="wall" />
                <noderef id="throne" />
                <noderef id="floor" />
                <noderef id="columns" />
            </descendants>
        </node>

        <!-- Node representing the main wall, behind the throne -->
        <node id="wall">
            <material id="null" />

            <texture id="clear">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>
            </transformations>

            <descendants>
                <noderef id="main-wall" />
                <noderef id="window" />
                <noderef id="door-right" />
                <noderef id="door-left" />
            </descendants>
        </node>

        <!-- Node representing the window decoration of the main wall -->
        <node id="main-wall">
            <material id="null" />

            <texture id="wallTexture">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>
                <translation x="0.0" y="10.0" z="-25.0" />
                <scale sx="20.0" sy="10.0" sz="25.0" />
            </transformations>

            <descendants>
                <leaf type="rectangle" x1="-1" y1="-1" x2="1" y2="1" />
            </descendants>
        </node>

        <!-- Node representing the window of the main wall -->
        <node id="window">
            <material id="null" />

            <texture id="clear">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>
            </transformations>

            <descendants>
                <noderef id="glass" />
                <noderef id="window-decoration" />
            </descendants>
        </node>

        <!-- Node representing the glass of the window -->
        <node id="glass">
            <material id="null" />

            <texture id="glassTexture">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>
                <translation x="0.0" y="13.0" z="-24.9" />
                <scale sx="2.0" sy="5.0" sz="1.0" />
            </transformations>

            <descendants>
                <leaf type="rectangle" x1="-1" y1="-1" x2="1" y2="1" />
            </descendants>
        </node>

        <!-- Node representing the window decoration of the main wall -->
        <node id="window-decoration">
            <material id="null" />

            <texture id="clear">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>
            </transformations>

            <descendants>
                <noderef id="window-decoration-spiral" />
                <!-- Will be added more elements... -->
            </descendants>
        </node>

        <!-- Node representing the spiral of the window decoration of the main wall -->
        <node id="window-decoration-spiral">
            <material id="null" />

            <texture id="clear">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>
                <translation x="0.0" y="17.0" z="-24.0" />
            </transformations>

            <descendants>
                <noderef id="window-decoration-wheel" />
                <noderef id="window-decoration-sphere" />
                <noderef id="window-decoration-spirals" />
            </descendants>
        </node>

        <!-- Node representing the wheel of the window decoration of the main wall -->
        <node id="window-decoration-wheel">
            <material id="blackMaterial" />

            <texture id="clear">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>
            </transformations>

            <descendants>
                <leaf type="torus" inner="2.0" outer="3.0" slices="8" loops="8" />
            </descendants>
        </node>

        <!-- Node representing the inner sphere of the window decoration of the main wall -->
        <node id="window-decoration-sphere">
            <material id="orangeMaterial" />

            <texture id="clear">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>
            </transformations>

            <descendants>
                <leaf type="sphere" radius="0.5" slices="8" stacks="8"/>
            </descendants>
        </node>

        <!-- Node representing the spirals of the window decoration of the main wall -->
        <node id="window-decoration-spirals">
            <material id="lightOrangeMaterial" />

            <texture id="clear">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>
            </transformations>

            <descendants>
                <noderef id="window-decoration-spiral-side1" />
                <noderef id="window-decoration-spiral-side2" />
                <noderef id="window-decoration-spiral-side3" />
                <noderef id="window-decoration-spiral-side4" />
                <noderef id="window-decoration-spiral-side5" />
                <noderef id="window-decoration-spiral-side6" />
            </descendants>
        </node>

        <!-- Node representing the first triangle of the decoration of the main wall -->
        <node id="window-decoration-spiral-side1">
            <material id="null" />

            <texture id="clear">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>
                <translation x="0.0" y="2.0" z="0.0" />
                <scale sx="1.0" sy="10.0" sz="1.0" />
            </transformations>

            <descendants>
                <leaf type="triangle" x1="-0.5" y1="0" x2="0.5" y2="0.0" x3="0.0" y3="0.5" />
            </descendants>
        </node>

        <!-- Node representing the second triangle of the decoration of the main wall -->
        <node id="window-decoration-spiral-side2">
            <material id="null" />

            <texture id="clear">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>
                <rotation axis="z" angle="60.0" />
                <translation x="0.0" y="2.0" z="0.0" />
                <scale sx="1.0" sy="10.0" sz="1.0" />
            </transformations>

            <descendants>
                <leaf type="triangle" x1="-0.5" y1="0" x2="0.0" y2="0.5" x3="0.5" y3="0.0" />
            </descendants>
        </node>

        <!-- Node representing the third triangle of the decoration of the main wall -->
        <node id="window-decoration-spiral-side3">
            <material id="null" />

            <texture id="clear">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>
                <rotation axis="z" angle="120.0" />
                <translation x="0.0" y="2.0" z="0.0" />
                <scale sx="1.0" sy="10.0" sz="1.0" />
            </transformations>

            <descendants>
                <leaf type="triangle" x1="-0.5" y1="0" x2="0.0" y2="0.5" x3="0.5" y3="0.0" />
            </descendants>
        </node>

        <!-- Node representing the fourth triangle of the decoration of the main wall -->
        <node id="window-decoration-spiral-side4">
            <material id="null" />

            <texture id="clear">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>
                <rotation axis="z" angle="180.0" />
                <translation x="0.0" y="2.0" z="0.0" />
                <scale sx="1.0" sy="10.0" sz="1.0" />
            </transformations>

            <descendants>
                <leaf type="triangle" x1="-0.5" y1="0" x2="0.0" y2="0.5" x3="0.5" y3="0.0" />
            </descendants>
        </node>

        <!-- Node representing the fifth triangle of the decoration of the main wall -->
        <node id="window-decoration-spiral-side5">
            <material id="null" />

            <texture id="clear">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>
                <rotation axis="z" angle="240.0" />
                <translation x="0.0" y="2.0" z="0.0" />
                <scale sx="1.0" sy="10.0" sz="1.0" />
            </transformations>

            <descendants>
                <leaf type="triangle" x1="-0.5" y1="0" x2="0.0" y2="0.5" x3="0.5" y3="0.0" />
            </descendants>
        </node>

        <!-- Node representing the sixth triangle of the decoration of the main wall -->
        <node id="window-decoration-spiral-side6">
            <material id="null" />

            <texture id="clear">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>
                
                <rotation axis="z" angle="300.0" />
                <translation x="0.0" y="2.0" z="0.0" />
                <scale sx="1.0" sy="10.0" sz="1.0" />
            </transformations>

            <descendants>
                <leaf type="triangle" x1="-0.5" y1="0" x2="0.0" y2="0.5" x3="0.5" y3="0.0" />
            </descendants>
        </node>

        <!-- Node representing the door of the main wall at the right -->
        <node id="door-right">
            <material id="null" />

            <texture id="clear">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>
                <translation x="20.0" y="0.0" z="0.0" />
            </transformations>

            <descendants>
                <noderef id="door" />
            </descendants>
        </node>

        <!-- Node representing the door of the main wall at the left -->
        <node id="door-left">
            <material id="null" />

            <texture id="clear">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>
                <translation x="-20.0" y="0.0" z="0.0" />
            </transformations>

            <descendants>
                <noderef id="door" />
            </descendants>
        </node>
        
        <!-- Node representing a door -->
        <node id="door">
            <material id="null" />

            <texture id="clear">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>
                <translation x="0.0" y="0.0" z="-25.0" />
            </transformations>

            <descendants>
                <noderef id="door-arc" />
                <noderef id="door-side1" />
                <noderef id="door-side2" />
            </descendants>
        </node>

        <!-- Node representing the door arc -->
        <node id="door-arc">
            <material id="null" />

            <texture id="clear">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>
                <translation x="0.0" y="10.0" z="0.0" />

            </transformations>

            <descendants>
                <leaf type="torus" inner="2.0" outer="3.5" slices="15" loops="40" />
            </descendants>
        </node>

        <!-- Node representing the left side of the door -->
        <node id="door-side1">
            <material id="null" />

            <texture id="clear">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>
                <translation x="2.5" y="0.0" z="0.0" />
                <rotation axis="x" angle="-90" />
            </transformations>

            <descendants>
                <leaf type="cylinder" height="10.0" topRadius="1.0" bottomRadius="1.0" stacks="8" slices="8"/>
            </descendants>
        </node>

        <!-- Node representing the right side of the door -->
        <node id="door-side2">
            <material id="null" />

            <texture id="clear">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>
                <translation x="-2.5" y="0.0" z="0.0" />
                <rotation axis="x" angle="-90" />
            </transformations>

            <descendants>
                <leaf type="cylinder" height="10.0" topRadius="1.0" bottomRadius="1.0" stacks="8" slices="8"/>
            </descendants>
        </node>

        <!-- Node representing the throne -->
        <node id="throne">
            <material id="null" />

            <texture id="throneTexture">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>
                <translation x="0.0" y="4.5" z="-22.0" />
                <rotation axis="y" angle="-90" />
            </transformations>

            <descendants>
                <noderef id="throne-seat" />
                <noderef id="throne-supports" />
                <noderef id="throne-back" />
            </descendants>
        </node>

        <!-- Node representing the seat of the throne -->
        <node id="throne-seat">
            <material id="null" />

            <texture id="null">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>
                <translation x="0.5" y="0.0" z="0.0" />
                <scale sx="2.0" sy="1.0" sz="1.8" />
            </transformations>

            <descendants>
                <noderef id="cube" />
            </descendants>
        </node>

        <!-- Node representing the arm-supports of the throne -->
        <node id="throne-supports">
            <material id="null" />

            <texture id="null">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>
                <scale sx="1.0" sy="0.8" sz="1.0" />
            </transformations>

            <descendants>
                <noderef id="throne-left-support" />
                <noderef id="throne-right-support" />
            </descendants>
        </node>

        <!-- Node representing the left arm-support of the throne -->
        <node id="throne-left-support">
            <material id="null" />

            <texture id="null">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>
                <translation x="0.0" y="0.0" z="-1.3" />
                <scale sx="1.2" sy="2.0" sz="0.8" />
            </transformations>

            <descendants>
                <noderef id="cube" />
            </descendants>
        </node>

        <!-- Node representing the right arm-support of the throne -->
        <node id="throne-right-support">
            <material id="null" />

            <texture id="null">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>
                <translation x="0.0" y="0.0" z="1.3" />
                <scale sx="1.2" sy="2.0" sz="0.8" />
            </transformations>

            <descendants>
                <noderef id="cube" />
            </descendants>
        </node>

        <!-- Node representing the back of the throne -->
        <node id="throne-back">
            <material id="null" />

            <texture id="null">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>
                <translation x="-1.0" y="0.0" z="0.0" />
                <scale sx="1.0" sy="3.0" sz="1.8" />
            </transformations>

            <descendants>
                <noderef id="cube" />
            </descendants>
        </node>

        <!-- Node representing the floor of the scene -->
        <node id="floor">
            <material id="floorMaterial" />

            <texture id="clear">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>
            </transformations>

            <descendants>
                <noderef id="floor-main" />
                <noderef id="floor-stairs" />
            </descendants>
        </node>

        <!-- Node representing the main floor of the scene -->
        <node id="floor-main">
            <material id="null" />

            <texture id="clear">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>
                <rotation axis="x" angle="-90" />
                <scale sx="40" sy="50" sz="1.0" />
            </transformations>

            <descendants>
                <leaf type="rectangle" x1="-0.5" y1="-0.5" x2="0.5" y2="0.5" />
            </descendants>
        </node>

        <!-- Node representing the stairs to the throne -->
        <node id="floor-stairs">
            <material id="null" />

            <texture id="clear">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>
                <translation x="0.0" y="0.0" z="-10.0" />
            </transformations>

            <descendants>
                <noderef id="stair1" />
                <noderef id="stair2" />
                <noderef id="stair3" />
                <noderef id="side-stair1" />
                <noderef id="side-stair2" />
            </descendants>
        </node>

        <!-- Node representing the first stair to the throne -->
        <node id="stair1">
            <material id="null" />

            <texture id="clear">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>
                <translation x="0.0" y="0.0" z="-7.5" />
                <scale sx="12.5" sy="2.0" sz="15.0" />
            </transformations>

            <descendants>
                <noderef id="cube" />
            </descendants>
        </node>

        <!-- Node representing the second stair to the throne -->
        <node id="stair2">
            <material id="null" />

            <texture id="clear">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>
                <translation x="0.0" y="0.0" z="-10.0" />
                <scale sx="10" sy="3.5" sz="10.0" />
            </transformations>

            <descendants>
                <noderef id="cube" />
            </descendants>
        </node>

        <!-- Node representing the third stair to the throne -->
        <node id="stair3">
