                <rotation axis="cc" angle="ff" />
                <scale sx="ff" sy="ff" sz="ff" />
            </transformations>

            <descendants>
                <noderef id="cube" />
            </descendants>
        </node>

        <!-- Node representing the back of the throne -->
        <node id="throne-back">
            <material id="null" />

            <texture id="clear">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>
                <translation x="ff" y="ff" z="ff" />
                <rotation axis="cc" angle="ff" />
                <scale sx="ff" sy="ff" sz="ff" />
            </transformations>

            <descendants>
                <noderef id="cube" />
            </descendants>
        </node>

        <!-- Node representing the floor of the scene -->
        <node id="floor">
            <material id="null" />

            <texture id="clear">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>
                <translation x="ff" y="ff" z="ff" />
                <rotation axis="cc" angle="ff" />
                <scale sx="ff" sy="ff" sz="ff" />
            </transformations>

            <descendants>
                <noderef id="floor-main" />
                <noderef id="floor-stairs" />
            </descendants>
        </node>

        <!-- Node representing the main floor of the scene -->
        <node id="floor-main">
            <material id="null" />

            <texture id="clear">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>
                <translation x="ff" y="ff" z="ff" />
                <rotation axis="cc" angle="ff" />
                <scale sx="ff" sy="ff" sz="ff" />
            </transformations>

            <descendants>
                <leaf type="rectangle" x1="0" y1="1" x2="1" y2="0" />
            </descendants>
        </node>

        <!-- Node representing the stairs to the throne -->
        <node id="floor-stairs">
            <material id="null" />

            <texture id="clear">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>
                <translation x="ff" y="ff" z="ff" />
                <rotation axis="cc" angle="ff" />
                <scale sx="ff" sy="ff" sz="ff" />
            </transformations>

            <descendants>
                <noderef id="cube" />
                <noderef id="cube" />
                <noderef id="cube" />
            </descendants>
        </node>

        <!-- Node representing the columns -->
        <node id="columns">
            <material id="null" />

            <texture id="clear">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>
                <translation x="ff" y="ff" z="ff" />
                <rotation axis="cc" angle="ff" />
                <scale sx="ff" sy="ff" sz="ff" />
            </transformations>

            <descendants>
                <noderef id="column-left" />
                <noderef id="column-right" />
            </descendants>
        </node>

        <!-- Node representing the left column -->
        <node id="column-left">
            <material id="null" />

            <texture id="clear">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>
                <translation x="ff" y="ff" z="ff" />
                <rotation axis="cc" angle="ff" />
                <scale sx="ff" sy="ff" sz="ff" />
            </transformations>

            <descendants>
                <noderef id="column" />
            </descendants>
        </node>

        <!-- Node representing the right column -->
        <node id="column-right">
            <material id="null" />

            <texture id="clear">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>
                <translation x="ff" y="ff" z="ff" />
                <rotation axis="cc" angle="ff" />
                <scale sx="ff" sy="ff" sz="ff" />
            </transformations>

            <descendants>
                <noderef id="column" />
            </descendants>
        </node>

        <!-- Node representing column -->
        <node id="column">
            <material id="null" />

            <texture id="clear">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>
                <translation x="ff" y="ff" z="ff" />
                <rotation axis="cc" angle="ff" />
                <scale sx="ff" sy="ff" sz="ff" />
            </transformations>

            <descendants>
                <noderef id="cube" />
                <leaf type="cylinder" height="ff" topRadius="ff" bottomRadius="ff" stacks="ii" slices="ii" />
            </descendants>
        </node>

        <!-- Node representing a cube -->
        <node id="cube">
            <material id="null" />

            <texture id="clear">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>
                <translation x="0.0" y="0.5" z="0.0" />
            </transformations>

            <descendants>
                <noderef id="cubeface1" />
                <noderef id="cubeface2" />
                <noderef id="cubeface3" />
                <noderef id="cubeface4" />
                <noderef id="cubeface5" />
                <noderef id="cubeface6" />
            </descendants>
        </node>

        <!-- Cube Faces -->
        <node id="cubeface1">
            <material id="null" />

            <texture id="clear">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>
                <translation x="0.0" y="0.0" z="-0.5" />
            </transformations>

            <descendants>
                <leaf type="rectangle" x1="0.5" y1="-0.5" x2="-0.5" y2="0.5" />
            </descendants>
        </node>

        <node id="cubeface2">
            <material id="null" />

            <texture id="clear">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>
                <rotation axis="y" angle="90" />
                <translation x="0.0" y="0.0" z="-0.5" />
            </transformations>

            <descendants>
                <leaf type="rectangle" x1="0.5" y1="-0.5" x2="-0.5" y2="0.5" />
            </descendants>
        </node>

        <node id="cubeface3">
            <material id="null" />

            <texture id="clear">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>
                <rotation axis="y" angle="180" />
                <translation x="0.0" y="0.0" z="-0.5" />
            </transformations>

            <descendants>
                <leaf type="rectangle" x1="0.5" y1="-0.5" x2="-0.5" y2="0.5" />
            </descendants>
        </node>

        <node id="cubeface4">
            <material id="null" />

            <texture id="clear">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>
                <rotation axis="y" angle="270" />
