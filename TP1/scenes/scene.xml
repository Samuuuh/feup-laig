<lsf>
    <initials>
        <reference length="2" />
        <!-- axis length; "0" means no axis displayed -->
        <root id="palace-got" />
        <!-- identifier of root node of the scene graph; this node -->
        <!-- must be defined in one of the following NODE declarations -->
    </initials>
    <views default="defaultCamera">
        <!-- at least one of the following type of cameras must be declared -->
        <perspective id="defaultCamera" near="0.1" far="500" angle="45">
            <from x="30" y="15" z="30" />
            <to x="0" y="-2" z="0" />
        </perspective>

        <perspective id="frontCamera" near="0.1" far="500" angle="0">
            <from x="80" y="50" z="20" />
            <to x="0" y="-2" z="20" />
        </perspective>

        <ortho id="demoOrtho" near="0.2" far="100" left="-0.2" right="0.2" top="0.2" bottom="-0.2">
            <from x="5" y="0" z="10" />
            <to x="5" y="0" z="0" />
            <up x="0" y="1" z="0" /><!-- optional, default 0,1,0 -->
        </ortho>
    </views>

    <illumination>
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />           <!-- global ambient -->
        <background r="0.1" g="0.7" b="1.0" a="1.0" />        <!-- background color -->
    </illumination>


    <lights>
        <!-- NOTE: this block "light" must be repeated as necessary with different "id". At least one light should be present, and a maximum of eight lights is accepted. -->
        <light id="ambientLight">            <!-- ambient light -->
            <enable value="1" />
            <position x="10" y="12" z="9.5" w="1.0" />              <!-- light position; w=1: point light; w=0: directional light -->
            <ambient r="0" g="0" b="0" a="1.0" />                   <!-- ambient component -->
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />             <!-- diffuse component -->
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />            <!-- specular component -->
        </light>

        <light id="windowLight">            <!-- window light -->
            <enable value="0" />
            <position x="0" y="20" z="20" w="0.0" />                <!-- light position; w=1: point light; w=0: directional light -->
            <ambient r="0.0" g="0.0" b="0.0" a="1.0" />            <!-- ambient component -->
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />             <!-- diffuse component -->
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />            <!-- specular component -->
        </light>

        <light id="rightLight">            <!-- right torch light -->
            <enable value="0" />
            <position x="25" y="15" z="38" w="1.0" />               <!-- light position; w=1: point light; w=0: directional light -->
            <ambient r="0" g="0" b="0" a="1.0" />                   <!-- ambient component -->
            <diffuse r="1.0" g="0.37" b="0.11" a="1.0" />           <!-- diffuse component -->
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />            <!-- specular component -->
        </light>

        <light id="leftLight">            <!-- left torch light -->
            <enable value="0" />
            <position x="25" y="15" z="2" w="1.0" />                <!-- light position; w=1: point light; w=0: directional light -->
            <ambient r="0" g="0" b="0" a="1.0" />                   <!-- ambient component -->
            <diffuse r="1.0" g="0.37" b="0.11" a="1.0" />           <!-- diffuse component -->
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />            <!-- specular component -->
        </light>
    </lights>


    <textures>
        <!-- NOTE: this block "TEXTURE" must be repeated as necessary with different "id" -->
        <texture id="defaultTexture" path="./scenes/images/rocks.jpg" />
        <texture id="wallTexture" path="./scenes/images/stones.jpg" />
        <texture id="windowTexture" path="./scenes/images/glass.jpg" />
        <texture id="throneTexture" path="./scenes/images/swords.jpg" />
    </textures>


    <materials>
        <!-- NOTE: the "MATERIAL" block may be repeated as required. Each defined material
         requires a distinct "id". At least one material should be present. -->
         <material id="defaultMaterial">
            <shininess value="1.0" />
            <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
            <diffuse r="0.0" g="0.0" b="0.0" a="1.0" />
            <specular r="0.0" g="0.0" b="0.0" a="1.0" />
            <emissive r="0.0" g="0.0" b="0.0" a="1.0" />
        </material>

        <material id="floorMaterial">
            <shininess value="1.0" />
            <ambient r="0.0" g="0.0" b="0.0" a="1.0" />
            <diffuse r="0.86" g="0.85" b="0.7" a="1.0" />
            <specular r="0.0" g="0.0" b="0.0" a="1.0" />
            <emissive r="0.0" g="0.0" b="0.0" a="1.0" />
        </material>

        <material id="blackMaterial">
            <shininess value="1.0" />
            <ambient r="0.0" g="0.0" b="0.0" a="1.0" />
            <diffuse r="0.0" g="0.0" b="0.0" a="1.0" />
            <specular r="0.0" g="0.0" b="0.0" a="1.0" />
            <emissive r="0.0" g="0.0" b="0.0" a="1.0" />
        </material>

        <material id="orangeMaterial">
            <shininess value="1.0" />
            <ambient r="0.0" g="0.0" b="0.0" a="1.0" />
            <diffuse r="1.0" g="0.5" b="0.0" a="1.0" />
            <specular r="0.0" g="0.0" b="0.0" a="1.0" />
            <emissive r="0.0" g="0.0" b="0.0" a="1.0" />
        </material>

        <material id="lightOrangeMaterial">
            <shininess value="1.0" />
            <ambient r="0.0" g="0.0" b="0.0" a="1.0" />
            <diffuse r="1.0" g="0.7" b="0.4" a="1.0" />
            <specular r="0.0" g="0.0" b="0.0" a="1.0" />
            <emissive r="0.0" g="0.0" b="0.0" a="1.0" />
        </material>
    </materials>

    <nodes>
        <!-- The Root Node, representing the main scene - the palace -->
        <node id="palace-got">            <!-- defines one intermediate node; may be repeated as necessary -->
            <!-- next two lines are mandatory -->
            <material id="floorMaterial" /><!-- this superimposes the material received from parent node id="null" maintains material from parent node -->

            <texture id="wallTexture"><!-- declared texture superimposes the texture received from parent node id="null" maintains texture from parent node id="clear" clears texture declaration received from parent node -->
                <amplification afs="1.0" aft="1.0" /><!-- for primitives = dx/afs, dy/aft -->
            </texture>

            <!-- geom. transf. are optional and may be repeated, in any order, as necessary: -->
            <transformations>
            </transformations>

            <!-- declaring descendants, at least one node or one leaf must be present
             descendants may be mixed, nodes and leafs -->
            <descendants>
                <noderef id="wall" />
                <noderef id="throne" />
                <noderef id="floor" />
                <noderef id="columns" />
            </descendants>
        </node>

        <!-- Node representing the main wall, behind the throne -->
        <node id="wall">
            <material id="null" />

            <texture id="clear">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>
                <translation x="ff" y="ff" z="ff" />
                <rotation axis="cc" angle="ff" />
                <scale sx="ff" sy="ff" sz="ff" />
            </transformations>

            <descendants>
                <noderef id="window" />
                <noderef id="door-right" />
                <noderef id="door-left" />
            </descendants>
        </node>

        <!-- Node representing the window of the main wall -->
        <node id="window">
            <material id="null" />

            <texture id="clear">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>
                <translation x="ff" y="ff" z="ff" />
                <rotation axis="cc" angle="ff" />
                <scale sx="ff" sy="ff" sz="ff" />
            </transformations>

            <descendants>
                <noderef id="window-decoration" />
            </descendants>
        </node>

        <!-- Node representing the window decoration of the main wall -->
        <node id="window-decoration">
            <material id="null" />

            <texture id="clear">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>
                <translation x="ff" y="ff" z="ff" />
                <rotation axis="cc" angle="ff" />
                <scale sx="ff" sy="ff" sz="ff" />
            </transformations>

            <descendants>
                <noderef id="window-decoration-spiral" />
            </descendants>
        </node>

        <node id="window-decoration-spiral">
            <material id="null" />

            <texture id="clear">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>
                <translation x="ff" y="ff" z="ff" />
                <rotation axis="cc" angle="ff" />
                <scale sx="ff" sy="ff" sz="ff" />
            </transformations>

            <descendants>
                <leaf type="torus" inner="ff" outer="ff" slices="ii" loops="ii" />
                <leaf type="sphere" radius="ff" slices="ii" stacks="ii"/>
                <noderef id="window-decoration-spiral-side1" />
                <noderef id="window-decoration-spiral-side2" />
                <noderef id="window-decoration-spiral-side3" />
                <noderef id="window-decoration-spiral-side4" />
                <noderef id="window-decoration-spiral-side5" />
                <noderef id="window-decoration-spiral-side6" />
            </descendants>
        </node>

        <node id="window-decoration-spiral-side1">
            <material id="null" />

            <texture id="clear">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>
                <translation x="ff" y="ff" z="ff" />
                <rotation axis="cc" angle="ff" />
                <scale sx="ff" sy="ff" sz="ff" />
            </transformations>

            <descendants>
                <leaf type="triangle" x1="ff" y1="ff" x2="ff" y2="ff" x3="ff" y3="ff" />
            </descendants>
        </node>

        <node id="window-decoration-spiral-side2">
            <material id="null" />

            <texture id="clear">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>
                <translation x="ff" y="ff" z="ff" />
                <rotation axis="cc" angle="ff" />
                <scale sx="ff" sy="ff" sz="ff" />
            </transformations>

            <descendants>
                <leaf type="triangle" x1="ff" y1="ff" x2="ff" y2="ff" x3="ff" y3="ff" />
            </descendants>
        </node>

        <node id="window-decoration-spiral-side3">
            <material id="null" />

            <texture id="clear">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>
                <translation x="ff" y="ff" z="ff" />
                <rotation axis="cc" angle="ff" />
                <scale sx="ff" sy="ff" sz="ff" />
            </transformations>

            <descendants>
                <leaf type="triangle" x1="ff" y1="ff" x2="ff" y2="ff" x3="ff" y3="ff" />
            </descendants>
        </node>

        <node id="window-decoration-spiral-side4">
            <material id="null" />

            <texture id="clear">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>
                <translation x="ff" y="ff" z="ff" />
                <rotation axis="cc" angle="ff" />
                <scale sx="ff" sy="ff" sz="ff" />
            </transformations>

            <descendants>
                <leaf type="triangle" x1="ff" y1="ff" x2="ff" y2="ff" x3="ff" y3="ff" />
            </descendants>
        </node>

        <node id="window-decoration-spiral-side5">
            <material id="null" />

            <texture id="clear">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>
                <translation x="ff" y="ff" z="ff" />
                <rotation axis="cc" angle="ff" />
                <scale sx="ff" sy="ff" sz="ff" />
            </transformations>

            <descendants>
                <leaf type="triangle" x1="ff" y1="ff" x2="ff" y2="ff" x3="ff" y3="ff" />
            </descendants>
        </node>

        <node id="window-decoration-spiral-side6">
            <material id="null" />

            <texture id="clear">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>
                <translation x="ff" y="ff" z="ff" />
                <rotation axis="cc" angle="ff" />
                <scale sx="ff" sy="ff" sz="ff" />
            </transformations>

            <descendants>
                <leaf type="triangle" x1="ff" y1="ff" x2="ff" y2="ff" x3="ff" y3="ff" />
            </descendants>
        </node>

        <!-- Node representing the door of the main wall at the right -->
        <node id="door-right">
            <material id="null" />

            <texture id="clear">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>
                <translation x="ff" y="ff" z="ff" />
                <rotation axis="cc" angle="ff" />
                <scale sx="ff" sy="ff" sz="ff" />
            </transformations>

            <descendants>
                <noderef id="door" />
            </descendants>
        </node>

        <!-- Node representing the door of the main wall at the left -->
        <node id="door-left">
            <material id="null" />

            <texture id="clear">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>
                <translation x="ff" y="ff" z="ff" />
                <rotation axis="cc" angle="ff" />
                <scale sx="ff" sy="ff" sz="ff" />
            </transformations>

            <descendants>
                <noderef id="door" />
            </descendants>
        </node>
        
        <!-- Node representing a door -->
        <node id="door">
            <material id="null" />

            <texture id="clear">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>
                <translation x="ff" y="ff" z="ff" />
                <rotation axis="cc" angle="ff" />
                <scale sx="ff" sy="ff" sz="ff" />
            </transformations>

            <descendants>
                <leaf type="torus" inner="ff" outer="ff" slices="ii" loops="ii" />
                <leaf type="cylinder" height="ff" topRadius="ff" bottomRadius="ff" stacks="ii" slices="ii"/>
                <leaf type="cylinder" height="ff" topRadius="ff" bottomRadius="ff" stacks="ii" slices="ii"/>
                </descendants>
        </node>

        <!-- Node representing the throne -->
        <node id="throne">
            <material id="null" />

            <texture id="clear">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>
                <translation x="ff" y="ff" z="ff" />
                <rotation axis="cc" angle="ff" />
                <scale sx="ff" sy="ff" sz="ff" />
            </transformations>

            <descendants>
                <noderef id="throne-seat" />
                <noderef id="throne-supports" />
                <noderef id="throne-back" />
            </descendants>
        </node>

        <!-- Node representing the seat of the throne -->
        <node id="throne-seat">
            <material id="null" />

            <texture id="clear">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>
                <translation x="ff" y="ff" z="ff" />
                <rotation axis="cc" angle="ff" />
                <scale sx="ff" sy="ff" sz="ff" />
            </transformations>

            <descendants>
                <noderef id="cube" />
            </descendants>
        </node>

        <!-- Node representing the arm-supports of the throne -->
        <node id="throne-supports">
            <material id="null" />

            <texture id="clear">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>
                <translation x="ff" y="ff" z="ff" />
                <rotation axis="cc" angle="ff" />
                <scale sx="ff" sy="ff" sz="ff" />
            </transformations>

            <descendants>
                <noderef id="throne-left-support" />
                <noderef id="throne-right-support" />
            </descendants>
        </node>

        <!-- Node representing the left arm-support of the throne -->
        <node id="throne-left-support">
            <material id="null" />

            <texture id="clear">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>
                <translation x="ff" y="ff" z="ff" />
                <rotation axis="cc" angle="ff" />
                <scale sx="ff" sy="ff" sz="ff" />
            </transformations>

            <descendants>
                <noderef id="cube" />
            </descendants>
        </node>

        <!-- Node representing the right arm-support of the throne -->
        <node id="throne-right-support">
            <material id="null" />

            <texture id="clear">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>
